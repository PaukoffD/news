<meta name="viewport" content="initial-scale=1, maximum-scale=1" />
<p id="notice"><%= notice %></p>




		

<table class="table table-striped  table-condensed">

 <thead>
  <tr>
    <th width="2%"></th>
    <th width="48%"></th>
    <th width="2%"></th>
    <th width="48%"><center></center></th>
   
   </tr>
  </thead>
 
 <% for i in 0..8 do %> 
 <div class="btn-group">
  
   <button type="button" class="btn btn-info"><%= link_to (Date.today-i).strftime("%d-%m-%y"), data_path(data:(Date.today-i))  %></button>
  
    </div>
 <% end %> 
  <right>       <%= Time.zone.now().strftime("%T") %> </right>
  
  
    <% @pages.each_slice(2) do |a, b| %>
 	
    <tr>
     
	
	
	
	 
	 <td><h6><%= a["time"].to_time().in_time_zone("Moscow").strftime("%R") %></h6>
	  
	 </td>
	
	  
	 <td> 
	 <% if a["summary"].blank? %>
	 <% a["summary"]= " " %>
	 <% end %>
      <details>
       <summary><%#= image_tag(@source[a['source_id']-1]['avatar__file_name'], class: 'avatar', :size => "20") %> <%=  link_to a["title"], nil, 'href' => a["ref"] , :target => "_blank" , title: a["summary"] %></h6></div></summary>
        <%= markdown(a["summary"]) %>
       </details> 

	  
	  </td>
	  
	  
	  
  <% if b!=nil%>	
	 
	
	  
	<td> <h6><%= b["time"].to_time().in_time_zone("Moscow").strftime("%R") %></h6></td>
	
	  
	  
	  <td>
	  <% if b["summary"].blank? %>
	 <% b["summary"]= " " %>
	 <% end %>
	 
       <details>
       <summary><%#= image_tag(@sources[b['source_id']-1]['avatar__file_name'], class: 'avatar', :size => "20") %> <%=  link_to b["title"], nil, 'href' => b["ref"] , :target => "_blank" , title: b["summary"] %> </h6></div></summary>
        <%= markdown(b["summary"]) %>
       </details> 
	  </td>
	  
	
	  
	 <% end %>  
	 </tr>
	
    <% end %>
   
 
  

  </tbody>
</table>	 

<%#= paginate(@pages) %>



