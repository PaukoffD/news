<%= simple_form_for [@source,@sourcehtml] do |f| %>
  <%= f.error_notification %>

 <form role="form">
  <div class="form-group">
    <label for="name">Source name:</label>
    <%= f.text_field :name, disabled: true %>
  </div>
  <div class="form-group">
    <label for="name">Ref:</label>
    <%= f.text_field :ref, disabled: true  %>
  </div>

<div class="form-group">
    <label for="type">Html:</label>
    <%= f.check_box :html, disabled: true  %>
  </div>

 


<div class="form-group">
        <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
        
            <%= f.text_field :avatar, disabled: true  %>
   </div>
    
<%= f.simple_fields_for @sourcehtml do |q| %>
    
    <%=  q.input :url, label: "Url", class: 'form-control'   %>
    <%=  q.input :common1, label: "Common", class: 'form-control'   %>
    <%=  q.input :common2, label: "Common", class: 'form-control'   %>
    <%=  q.input :title, label: "Title", class: 'form-control'   %>
    <%=  q.input :ref, label: "Ref", class: 'form-control'   %>
    <%=  q.input :time, label: "Time", class: 'form-control'   %>
    <%=  q.input :image, label: "Image", class: 'form-control'   %>




   <% end %>
 
   

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

 
</form>

<% end %>
